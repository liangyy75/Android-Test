<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/dimen20">

    <Button
        android:id="@+id/test_apt_route_to_bind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/route_to_bind_activity" />

    <Button
        android:id="@+id/test_apt_route_to_dagger2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/route_to_dagger2_activity" />

    <Button
        android:id="@+id/test_apt_route_to_spi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/route_to_spi_activity" />
</LinearLayout>